.beige-noise
    .p-wrapper

        .container
        .row
            .col-sm-12
                if locals.readme
                    section(id=name) !{readme}
                each symbol in dox
                    if symbol.ctx.name
                        section(id=symbol.ctx.name)
                            h1= symbol.ctx.name
                            h5.subheader
                            if !symbol.gtype && symbol.type
                                p
                                    span(class=["label", "label-info", "radius", "ctx-type"])= symbol.type
                            else
                                p
                                    //mixin labelForSymbolType(symbol)
                                    span(class=["label", "label-info", "radius", "ctx-type"])= symbol.ctx.type
                                    if symbol.ctx.string
                                        span= symbol.ctx.string
                                    if symbol.return
                                        span.glyphicon.glyphicon-arrow-right(title="return value")
                                        span= symbol.return

                    if symbol.hasParams
                        div.bs-example
                            table.table
                                thead
                                    tr
                                        th(style="width:20%") Option name
                                        th(style="width:20%") Type
                                        th Description
                                tbody
                                    each tag in symbol.tags
                                        if tag.type == 'param'
                                            tr
                                                td= tag.name
                                                td= tag.types
                                                td= tag.description

                    tabset
                        tab(heading="Description")
                            .well
                                !=symbol.description.full
                                !=symbol.description.extra
                        if symbol.code
                            tab(heading="Source")
                                div(hljs)
                                    =symbol.code
                        if symbol.jsfiddle
                            tab(heading="jsFiddle")
                                h5 jsFiddle
                                p
                                    iframe(width="100%", height="300", src=symbol.jsfiddle , allowfullscreen="allowfullscreen", frameborder="0")

                    hr